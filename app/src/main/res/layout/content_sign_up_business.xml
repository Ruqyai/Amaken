<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.amakenapp.website.amakenapp.activities.SignUpBusiness"
    tools:showIn="@layout/activity_sign_up_business">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/business_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="15dp">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/businessEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address_text"
                android:inputType="text"
                android:ems="10"
                android:textSize="@dimen/FontSize"
                android:textColor="#15AFD8"
                android:textColorHint="#15AFD8"
                android:textColorLink="#15AFD8" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/business_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            app:passwordToggleEnabled="true"
            android:layout_marginRight="32dp"
            android:layout_marginTop="1dp">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/businessPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_"
                android:inputType="textPassword"
                android:textSize="@dimen/FontSize"
                android:textColor="#15AFD8"
                android:ems="10"
                android:textColorHint="#15AFD8"
                android:textColorLink="#15AFD8"
               />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="1dp">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/businessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_name_hint"
                android:inputType="textPersonName"
                android:textSize="@dimen/FontSize"
                android:textColor="#15AFD8"
                android:ems="10"
                android:textColorHint="#15AFD8"
                android:textColorLink="#15AFD8" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/business_WebUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="1dp">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/businessWebUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_web_url_optional_hint"
                android:inputType="textPersonName"
                android:textSize="@dimen/FontSize"
                android:textColor="#15AFD8"
                android:ems="10"
                android:textColorHint="#15AFD8"
                android:textColorLink="#15AFD8" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/business_PhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="1dp">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/businessPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/business_phone_number_hint"
                android:inputType="textPersonName"
                android:textSize="@dimen/FontSize"
                android:textColor="#15AFD8"
                android:ems="10"
                android:textColorHint="#15AFD8"
                android:textColorLink="#15AFD8" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:text="@string/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#A47A51"
            android:textSize="@dimen/FontSize"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp" />
        <Spinner
            android:id="@+id/sign_up_business_countries_spinner_dialog"
            android:layout_width="302dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog"
            android:background="@android:drawable/btn_dropdown"/>
        <TextView
            android:text="@string/city"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#A47A51"
            android:textSize="@dimen/FontSize"
            android:paddingLeft="10dp" />
        <Spinner
            android:id="@+id/sign_up_business_cities_spinner_dialog"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:spinnerMode="dialog"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@android:drawable/btn_dropdown"/>

        <Button
            android:id="@+id/SignUpBusiness"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:background="#15AFD8"
            android:text="@string/sign_up_button"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>

    </RelativeLayout>
