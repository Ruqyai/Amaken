<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="15dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            >

            <ImageView
                android:id="@+id/bookmarks_placeOrEventPicture"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="1dp"
                android:background="@drawable/ic_action_name"
                app:srcCompat="@drawable/target"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="1dp"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="1dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.033" />


            <TextView
                android:id="@+id/place_oe_event_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                 />
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/bookmarks_placeorEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_placeOrEventPicture"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintVertical_bias="0.144" />

            <TextView
                android:id="@+id/bookmarks_placeorEventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventName"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_placeOrEventPicture"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.056"
                app:layout_constraintVertical_bias="0.064" />

            <RatingBar
                android:id="@+id/placeorEventRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintLeft_toRightOf="@+id/statBookmarks"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintHorizontal_bias="0.035"
                app:layout_constraintVertical_bias="0.833" />

            <ImageView
                android:id="@+id/bookmarkLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bookmark2"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_timestamp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.822" />

            <TextView
                android:id="@+id/statRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/placeorEventRating"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/statBookmarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/bookmarkLogo"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/bookmarks_bookmarkLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/redheart"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_placeOrEventPicture"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintHorizontal_bias="0.035"
                app:layout_constraintVertical_bias="0.833" />

            <TextView
                android:id="@+id/bookmarks_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/bookmarks_placeorEventCategory"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_bookmarkLogo"
                android:layout_marginStart="3dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="1.0" />
            <TextView
                android:id="@+id/bookmarks_menuOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"

                android:text="&#8942;"
                android:textAppearance="?android:textAppearanceLarge"
                app:layout_constraintLeft_toRightOf="@+id/bookmarks_placeOrEventPicture"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.0" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>