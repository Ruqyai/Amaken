<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:src="@drawable/profile"
            app:civ_border_color="#b41b0606"
            app:civ_border_width="1dp"
            android:layout_alignStart="@+id/row1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/changeprofilepic"
        android:textColor="@color/baa"
        android:text="@string/change_your_profile_picture"
        android:layout_above="@+id/row1"
        android:layout_alignEnd="@+id/row1"
        android:layout_marginEnd="13dp" />



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/user_profile_pic"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_bookmarksCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    app:srcCompat="@drawable/bookmarkbutton" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bookmarks"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/user_profile_likesCard"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    app:srcCompat="@drawable/like" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="Likes"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_reviewsCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/reviews" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Reviews"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/user_profile_categoriesCard"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    app:srcCompat="@drawable/categories" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Categories"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </TableRow>
</RelativeLayout>

