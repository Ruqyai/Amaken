<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/change_business_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/profile"
        app:civ_border_color="#b41b0606"
        app:civ_border_width="1dp"
        android:layout_alignStart="@+id/row1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/businessProfile_changeProfilePicTxt"
        android:textColor="@color/baa"
        android:textSize="@dimen/FontSize"
        android:text="@string/change_your_profile_picture"
        android:layout_above="@+id/row1"
        android:layout_toEndOf="@+id/change_business_profile_pic" />



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/change_business_profile_pic"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/business_profile_placeCard"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/place" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/places_text_view"
                    android:textSize="@dimen/FontSize"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/business_profile_eventsCard"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/event"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/events_text_View"
                    android:textSize="@dimen/FontSize"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/business_profile_bookmarksCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/bookmarkbutton"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/bookmarks_text_view"
                    android:textSize="@dimen/FontSize"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/business_profile_likesCard"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/like"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/likes_text_view"
                    android:textSize="@dimen/FontSize"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/business_profile_reviewsCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/reviews"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:text="@string/reviews_text_view"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/business_profile_categoriesCard"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/categories"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:text="@string/categories_text_view"
                    android:textColor="@color/baa3"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </TableRow>

</RelativeLayout>
</ScrollView>
