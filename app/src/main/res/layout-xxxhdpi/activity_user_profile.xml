<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:tag="business_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fadeScrollbars="true"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="none"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/ic_person"
            app:civ_border_color="#b41b0606"
            app:civ_border_width="1dp"
            android:layout_alignStart="@+id/row1" />

        <TextView
            android:id="@+id/userProfile_changeProfilePicTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="@string/change_your_profile_picture"
            android:drawableEnd="@drawable/ic_edit"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textColor="@color/baa"
            android:textSize="@dimen/FontSize"
            android:layout_above="@+id/row1"
            android:layout_toEndOf="@+id/user_profile_pic" />



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/user_profile_pic"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_bookmarksCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/bookmarkbutton" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:text="@string/bookmarks_text"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/user_profile_likesCard"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/like" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:text="@string/likes_text"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:id="@+id/user_profile_reviewsCard"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/reviews" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:text="@string/reviews_text"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/user_profile_categoriesCard"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/user_profile_pic"
                android:layout_centerVertical="true"
                android:layout_marginEnd="38dp"
                android:orientation="vertical"
                android:background="#DBE8F1">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/categories" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/FontSize"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="1dp"
                    android:text="@string/categories_text"
                    android:textColor="@color/baa3" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </TableRow>
    
</RelativeLayout>

   </ScrollView>