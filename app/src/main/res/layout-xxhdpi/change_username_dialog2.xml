<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:scrollbars="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <android.support.design.widget.TextInputLayout
        android:id="@+id/report_reasonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/report_reasonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Change Your Name"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:textSize="@dimen/FontSize"
            android:textColor="#15AFD8"
            android:textColorHint="@color/baa"
            android:textColorLink="#15AFD8" />

    </android.support.design.widget.TextInputLayout>



    <TableRow
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        >


        <TextView
            android:layout_marginStart="8dp"

            android:id="@+id/show_detial_change_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Change Current Country"
            android:textAlignment="gravity"
            android:textColor="#8e8e8e"
            android:textSize="13sp"
            />
        <TextView
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:text="(Country)"
            android:layout_height="wrap_content"
            android:id="@+id/viewCountry"
            android:textSize="13sp"
            />

    </TableRow>


    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="15dp"
        android:background="@color/barlight"
        >


        <Spinner
            android:id="@+id/sppiner_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"

            android:spinnerMode="dialog" />


    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp">

        <TextView
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:textColor="#8e8e8e"
            android:text="Change Current City"
            android:layout_height="wrap_content"
            android:id="@+id/show_details_change_city"
            android:textSize="13sp"
            />



            <TextView
                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text="(City)"
                android:layout_height="wrap_content"
                android:id="@+id/viewCity"
                android:textSize="13sp"
                />





    </TableRow>



    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="15dp"
        android:background="@color/barlight"
        >


        <Spinner
            android:id="@+id/spiner_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"

            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            />

    </TableRow>

</LinearLayout>
 </ScrollView>