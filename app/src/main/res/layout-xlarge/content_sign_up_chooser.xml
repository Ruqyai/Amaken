<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up_chooser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.amakenapp.website.amakenapp.activities.SignUpChooser"
    tools:showIn="@layout/activity_sign_up_chooser">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="@dimen/FontSize"
            android:text="@string/sign_up_as_text"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#A47A51" />

        <android.support.v7.widget.CardView
            android:id="@+id/SignUpBusinessCard"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:elevation="8dp"
            app:cardCornerRadius="9dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="390dp"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="fill_parent"
                    android:layout_height="270dp"
                    android:background="#DDDDDD"
                    android:elevation="2dp"
                    app:srcCompat="@drawable/business1_icon" />

                <TextView
                    android:id="@+id/textViewDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:padding="2dp"
                    android:text="@string/business_text"
                    android:textColor="#15AFD8"
                    android:textSize="@dimen/FontSize"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/SignUpUserCard"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:elevation="8dp"
            app:cardCornerRadius="9dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:background="#DDDDDD"
                android:elevation="2dp"
                app:srcCompat="@drawable/business1_icon" />

            <TextView
                android:id="@+id/textViewDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="2dp"
                android:text="@string/user_text"
                android:textColor="#15AFD8"
                android:textSize="@dimen/FontSize"
                android:textStyle="bold" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
</RelativeLayout>
